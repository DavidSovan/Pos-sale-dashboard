<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:PosSale.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PosSale.Views.HomeView"
             x:DataType="vm:HomeViewModel">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
        <TextBlock Text="Welcome to POS System" FontSize="24" HorizontalAlignment="Center"/>
        
        <StackPanel Spacing="10">
            <TextBlock Text="{Binding WelcomeMessage}" FontSize="18"/>
            <TextBlock Text="{Binding UserRole}" FontSize="16"/>
        </StackPanel>
    </StackPanel>
</UserControl>
