
<Window
    x:Class="PosSale.Views.HomeView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="using:PosSale.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:PosSale.ViewModels"
    
    mc:Ignorable="d"
    x:DataType="vm:HomeViewModel"
    Width="800"
    Height="600"
    WindowStartupLocation="CenterScreen"
    Title="POS System - Home">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Cashier Dashboard"
                       FontSize="28"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>

            <Border Background="#f0f0f0"
                    CornerRadius="10"
                    Padding="20"
                    Margin="0,0,0,30">
                <StackPanel>
                    <TextBlock Text="User Information"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,15"
                               Foreground="Black"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Name:" Grid.Row="0" Grid.Column="0" Margin="0,0,10,10" Foreground="Black"/>
                                <TextBlock Text="{Binding UserName}" Grid.Row="0" Grid.Column="1" Margin="0,0,0,10" Foreground="Black"/>

                                <TextBlock Text="Role:" Grid.Row="1" Grid.Column="0" Margin="0,0,10,10" Foreground="Black"/>
                                <TextBlock Text="{Binding UserRole}" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10" Foreground="Black"/>
                            </Grid>
                </StackPanel>
            </Border>

            <!-- Start Sale Button -->
            <Button Content="Start Sale"
                    Command="{Binding StartSaleCommand}"
                    IsEnabled="{Binding IsLoading, Converter={x:Static c:BoolConverters.Not}}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="24"
                    Padding="40,20"
                    Margin="0,0,0,20"/>

            <!-- Loading Indicator -->
            <ProgressBar IsIndeterminate="True"
                         IsVisible="{Binding IsLoading}"
                         HorizontalAlignment="Center"
                         Height="30" />

            <!-- Error Message -->
            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="Red"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       IsVisible="{Binding ErrorMessage, Converter={x:Static c:StringConverters.IsNotNullOrEmpty}}"/>
        </StackPanel>
    </Grid>
</Window>